# EditorConfig - Coding Style Configuration for Automatic Dev Setup
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 4
max_line_length = 120

# Markdown files
[*.md]
max_line_length = 120
trim_trailing_whitespace = false

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Configuration files
[*.{env,conf,config}]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# Documentation files
[*.{txt,tsv}]
trim_trailing_whitespace = false
