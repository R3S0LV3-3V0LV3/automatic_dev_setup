# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# Configuration files
*.env text eol=lf
*.txt text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.xml text eol=lf

# Python files
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Documentation
*.md text
README text
LICENSE text
AUTHORS text
CHANGELOG text
CONTRIBUTING text
INSTALL text
NEWS text

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.7z binary

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore